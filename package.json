{
  "name": "@finogeek/cxagent",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun tsc && bun run build:assets",
    "build:assets": "bun cpx \"conf/**/*.{md,json,yaml}\" dist/conf/ --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "watch:ts": "bun tsc-watch",
    "watch:resources": "bun cpx \"conf/**/*.{md,json,yaml}\" dist/conf/ --watch",
    "watch": "bun concurrently \"bun run watch:ts\" \"bun run watch:resources\"",
    "dev:cli": "bun --watch cli.ts",
    "dev:server": "bun --watch server.ts",
    "clean": "rm -rf dist",
    "rebuild": "bun run clean && bun run build"
  },
  "dependencies": {
    "@finogeek/actgent": "^1.0.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7", 
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "bun-types": "^1.1.38",
    "concurrently": "^9.1.0",
    "cpx2": "^8.0.0",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
